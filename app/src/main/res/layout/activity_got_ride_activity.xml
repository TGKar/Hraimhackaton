<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/imageView1"
        android:src="@drawable/rider_background" android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></ImageView>

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DriverScreen">

        <TextView
            android:id="@+id/saveStatment"
            android:layout_width="wrap_content"
            android:textSize="32dp"
            android:ems = "10"
            android:layout_height="wrap_content"
            android:text="You can be picked up by Adi"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Phone number: 0525215581"
                android:layout_marginTop="20dp"
                android:textSize="32dp"
                android:ems = "10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/facebook_name"
                android:layout_width="300dp"
                android:textColor="#2D9DC8"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Adi's Facebook"
                android:textSize="32dp"
                android:ems = "10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <TextView
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:ems = "10"
            android:text="you should go out in 5 minuts"/>

        <Button
            android:id="@+id/navigate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="nav" />

    </android.widget.LinearLayout>

</RelativeLayout>

